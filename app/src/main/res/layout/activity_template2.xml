<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Template2">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Patricia Williamson"
                    android:textColor="#3245AF"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#3245AF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="162dp"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="   234-334-3344" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:text="  patrixx@gmail.com" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:layout_weight="1"
                        android:text="Address: 123 Street, City, Country" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#3245AF" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/objective"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Objective: Seeking a challenging position in a dynamic company." />

                    <TextView
                        android:id="@+id/reference"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="Reference"
                        android:textColor="#3F51B5"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/referenceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reference Name: John Doe" />

                    <TextView
                        android:id="@+id/jobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Title: Software Engineer" />

                    <TextView
                        android:id="@+id/companyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company Name: ABC Corporation" />

                    <TextView
                        android:id="@+id/emailRef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email: john.doe@example.com" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="Education"
                        android:textColor="#3F51B5"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="243dp"
                android:layout_height="225dp"
                android:layout_below="@id/ll2"
                android:layout_gravity="end"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#3245AF" />


            <TextView
                android:id="@+id/experienceText"
                android:layout_width="247dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:text="    Experience"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="243dp"
                android:layout_height="225dp"
                android:layout_below="@id/experienceText"
                android:layout_gravity="end"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#3245AF" />


            <TextView
                android:id="@+id/Skills"
                android:layout_width="247dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:text="      Skills"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="243dp"
                android:layout_height="225dp"
                android:layout_below="@id/Skills"
                android:layout_gravity="end"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
