<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Template3"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="714dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="177dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/photo"
                        android:layout_width="106dp"
                        android:layout_height="125dp"
                        android:src="@drawable/elena" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="  patrixx@gmail.com"
                        android:layout_marginStart="5sp"/>

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="234-334-3344"
                        android:layout_marginStart="5sp"/>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:text="Address: 123 Street, City, Country"
                        android:layout_marginStart="5sp"/>

                    <TextView
                        android:id="@+id/linkedIn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="linkedin.com/in/johndoe123"
                        android:layout_marginStart="5sp"/>

                    <TextView
                        android:id="@+id/Skills"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:text="Skills"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ListView
                            android:id="@+id/list3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/Skills"
                            tools:ignore="NotSibling" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="218dp"
                    android:layout_height="993dp"
                    android:background="#DAF5FF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="83dp"
                        android:text="Patricia"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/obj"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:text="i want to achive something" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:text="Reference"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/referenceName"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="referenceNamee" />

                    <TextView
                        android:id="@+id/jobref"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="job" />

                    <TextView
                        android:id="@+id/companyref"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="@string/CompanyName" />

                    <TextView
                        android:id="@+id/emailRef"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="xyz@gmail.com" />

                    <TextView
                        android:id="@+id/education"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:text="Education"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                        <ListView
                            android:id="@+id/list1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/education"
                            tools:ignore="NotSibling" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/experienceText"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:text="Experience"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="394dp">

                        <ListView
                            android:id="@+id/list2"
                            android:layout_width="match_parent"
                            android:layout_height="257dp"
                            android:layout_below="@id/experienceText"
                            tools:ignore="NotSibling" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:gravity="center">

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/Green_63"
            android:text="Download" />
    </LinearLayout>

</LinearLayout>
